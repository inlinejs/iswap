{
  "name": "recastify",
  "version": "0.0.4",
  "description": "Web Component transfiguration tool. Convert Web Components in a multitude of formats to other formats.",
  "author": {
    "name": "Jake Strawn",
    "url": "https://github.com/himerus"
  },
  "bin": {
    "convert": "./bin/run"
  },
  "homepage": "https://github.com/inlinejs/recastify",
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ininejs/recastify.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^1.16.5",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.1.1"
  },
  "devDependencies": {
    "@oclif/test": "^2.2.2",
    "@types/chai": "^4",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.64",
    "chai": "^4",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.3",
    "fs-extra": "^10.1.0",
    "inquirer": "^8.2.4",
    "mocha": "^9",
    "oclif": "^3",
    "shx": "^0.3.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.3.1",
    "typescript": "^4.8.4"
  },
  "oclif": {
    "bin": "recastify",
    "dirname": "recastify",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "convert": {
        "description": "Converts an outline web component to an inline web component"
      }
    }
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "test": "",
    "version": "oclif readme && git add README.md",
    "package": "npm publish"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/inlinejs/recastify/issues",
  "keywords": [
    "oclif",
    "recastify",
    "outline",
    "inline",
    "inlinejs",
    "web components"
  ],
  "types": "dist/index.d.ts"
}
